{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Reload database initial data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app/initial_data.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}/backend/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "POSTGRES_SERVER": "localhost",
                "ENV": "dev",
                "DICOMWEB_ORIGIN": "localhost/pacs/dicom-web",
            }
        },
        {
            "name": "Attach backend debugger",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/code"
                }
            ],
            "justMyCode": true
        }
    ]
}